{
  "name": "electron-template",
  "version": "1.0.0",
  "main": "build/main.js",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build:main": "webpack -c webpack.electron.js",
    "start:main": "electron build/main.js",
    "build:renderer": "webpack -c webpack.react.js",
    "start:renderer": "webpack serve -c webpack.react.js --hot",
    "dev": "set NODE_ENV=development&& yarn run build:main && concurrently -k \"yarn run start:renderer\" \"wait-on tcp:8080 && yarn run start:main\"",
    "prod": "set NODE_ENV=production&& yarn run build:main && yarn run build:renderer && electron-builder",
    "postinstall": "electron-rebuild"
  },
  "build": {
    "appId": "yak.electron-template",
    "productName": "Electron Template",
    "files": "build/**/*",
    "directories": {
      "output": "dist",
      "buildResources": "res"
    }
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^7.0.0",
    "csp-html-webpack-plugin": "^5.0.1",
    "css-loader": "^5.0.1",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4",
    "eslint": "7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.0.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.1",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {}
}
